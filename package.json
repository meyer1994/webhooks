{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "dev:systemd": "systemd-run --user --scope -p MemoryMax=4096M nuxt dev",
    "dev:systemd:loop": "exec bash -c 'while true; do pnpm dev:systemd; sleep 2; done'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "nuxt typecheck",
    "clean": "rm -rf .output .wrangler .nuxt",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "reset": "pnpm clean && rm -rf node_modules  && pnpm install && pnpm run lint && pnpm run typecheck && pnpm run build",
    "db:generate": "dotenv -e .env -- drizzle-kit generate",
    "cf:deploy": "pnpm run build && wrangler --cwd .output deploy",
    "cf:deploy:systemd": "systemd-run --user --scope -p MemoryMax=4096M pnpm run cf:deploy",
    "cf:types": "wrangler types shared/wrangler.d.ts",
    "cf:dev": "wrangler dev",
    "cf:migrate": "wrangler d1 migrations apply webhooks"
  },
  "dependencies": {
    "@nuxt/eslint": "1.12.1",
    "@nuxt/ui": "^4.3.0",
    "@trpc/client": "^11.8.1",
    "@trpc/server": "^11.8.1",
    "@vueuse/components": "^14.1.0",
    "@vueuse/core": "^14.1.0",
    "@vueuse/nuxt": "^14.1.0",
    "drizzle-orm": "^0.45.1",
    "echarts": "^6.0.0",
    "echarts-simple-transform": "^1.0.0",
    "nuxt": "^4.2.2",
    "nuxt-echarts": "1.0.1",
    "trpc-nuxt": "^2.0.1",
    "uuidv7": "^1.1.0",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@iconify-json/lucide": "^1.2.86",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^25.0.5",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "nitro-cloudflare-dev": "^0.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.2.2",
    "wrangler": "^4.58.0"
  }
}